<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto" app:cardBackgroundColor="@color/white" app:contentPadding="3dp" android:id="@+id/parentLayout" android:layout_marginTop="1dp">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/groupImage" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/icon_defalut" />


        <TextView android:id="@+id/groupName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="4dp" android:layout_marginLeft="10dp" android:maxWidth="200dp" android:text="그룹이름" android:layout_toEndOf="@+id/groupImage" android:textSize="19dp" android:textColor="@color/black" />

        <TextView
            android:id="@+id/SenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupName"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/groupImage"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/lastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SenderName"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/groupImage"
            android:singleLine="true"
            android:text="아직 메세지가 없습니다."
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/sendedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:textColor="#090808"
            android:textSize="10sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>